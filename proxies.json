{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "getscores": {
            "matchCondition": {
                "route": "getscores",
                "methods": [
                    "POST"
                ]
            },
            "backendUri": "https://vantage-api-ms.azure-api.net/VantageAzureAPIs/GetCurrentScore"
        },
        "incrementpoint": {
            "matchCondition": {
                "route": "incrementpoint",
                "methods": [
                    "POST"
                ]
            },
            "backendUri": "https://vantage-api-ms.azure-api.net/VantageAzureAPIs/IncrementPointTrigger"
        },
        "root": {
            "matchCondition": {
                "route": "/{restOfPath}"
            },
            "backendUri": "https://%mycontainer_uri%/content/{restOfPath}"
        },
        "createteams": {
            "matchCondition": {
                "route": "/createteams",
                "methods": [
                    "POST"
                ]
            },
            "backendUri": "https://vantage-api-ms.azure-api.net/VantageAzureAPIs/CreateTeamSettings"
        },
        "getsettings": {
            "matchCondition": {
                "route": "/getsettings",
                "methods": [
                    "GET"
                ]
            },
            "backendUri": "https://vantage-api-ms.azure-api.net/VantageAzureAPIs/GetTeamSettings"
        },
        "default": {
            "matchCondition": {
                "route": "/",
                "methods": [
                    "GET"
                ]
            },
            "backendUri": "https://%mycontainer_uri%/content/index.html"
        }
    }
}